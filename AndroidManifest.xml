<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tatlisoft.quotez"
    android:versionCode="7"
    android:versionName="1.2" android:installLocation="auto">
    <uses-sdk android:targetSdkVersion="14" android:minSdkVersion="6"/>
    <application
        android:icon="@drawable/word_icon"
        android:label="@string/app_name" android:debuggable="false" android:description="@string/app_description">
        <activity
            android:label="@string/app_name"
            android:name=".MainActivity" 
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PeopleListerActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity
            android:name=".AboutActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity
            android:name=".ContactActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name="com.google.ads.AdActivity"
          android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    </application>
	<uses-permission android:name="android.permission.INTERNET"/>
  	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
</manifest>